<?xml version="1.0"?>
<robot>

    <!-- TODO: add collision, etc -->

    <link name="body">
        <visual>
            <geometry>
                <box size="0.20 0.10 0.10" />
            </geometry>
            <material name="blue" />
        </visual>
    </link>

    <joint name="axis" type="continuous">
        <origin xyz="0.10 0 0" />
        <parent link="body" />
        <child link="wheel" />
        <axis xyz="1 0 0" />
    </joint>

    <link name="wheel">
        <visual>
            <origin xyz="0.01 0 0" rpy="0 ${pi/2} 0" />
            <geometry>
                <cylinder radius="0.05" length="0.02" />
            </geometry>
            <material name="red" />
        </visual>
        <visual>
            <origin xyz="0.01 0 0.05" rpy="0 0 0" />
            <geometry>
                <box size="0.02 0.02 0.1" />
            </geometry>
            <material name="red" />
        </visual>
    </link>

</robot>