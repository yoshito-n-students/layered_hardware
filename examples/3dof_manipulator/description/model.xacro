<?xml version="1.0"?>
<robot>

    <!-- body => [shoulder] => upper_arm -->

    <link name="body">
        <visual>
            <geometry>
                <box size="0.10 0.10 0.10" />
            </geometry>
            <material name="blue" />
        </visual>
    </link>

    <joint name="shoulder" type="revolute">
        <origin xyz="0 0 0" />
        <parent link="body" />
        <child link="upper_arm" />
        <axis xyz="0 -1 0" />
        <limit lower="0" upper="3.14" effort="10.0" velocity="1.0" />
    </joint>

    <link name="upper_arm">
        <visual>
            <origin xyz="0.1 0 0" />
            <geometry>
                <box size="0.20 0.08 0.08" />
            </geometry>
            <material name="light_grey" />
        </visual>
    </link>

    <!-- upper_arm => [elbow] => forearm -->

    <joint name="elbow" type="continuous">
        <origin xyz="0.2 0 0" />
        <parent link="upper_arm" />
        <child link="forearm" />
        <axis xyz="0 -1 0" />
    </joint>

    <link name="forearm">
        <visual>
            <origin xyz="0.1 0 0" />
            <geometry>
                <box size="0.20 0.06 0.06" />
            </geometry>
            <material name="light_grey" />
        </visual>
    </link>

    <!-- forearm => [wrist] => hand -->

    <joint name="wrist" type="revolute">
        <origin xyz="0.2 0 0" />
        <parent link="forearm" />
        <child link="hand" />
        <axis xyz="0 -1 0" />
        <limit lower="-1.0" upper="1.0" effort="10.0" velocity="1.0" />
    </joint>

    <link name="hand">
        <visual>
            <geometry>
                <box size="0.04 0.04 0.04" />
            </geometry>
            <material name="red" />
        </visual>
    </link>

</robot>