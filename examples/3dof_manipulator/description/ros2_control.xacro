<?xml version="1.0"?>
<robot>

    <ros2_control name="LayeredHardware" type="system">
        <hardware>
            <plugin>layered_hardware/LayeredHardware</plugin>
            <param name="layers">
                - name: monitor_layer
                  type: layered_hardware/MonitorLayer
                - name: joint_limits_layer
                  type: layered_hardware/JointLimitsLayer
                - name: transmission_layer
                  type: layered_hardware/TransmissionLayer
                - name: mock_actuator_layer
                  type: layered_hardware/MockActuatorLayer
            </param>
            <param name="mock_actuator_layer">
                actuators:
                    shoulder_actuator:
                        command_mode_map:
                            shoulder/position: position
                            shoulder/velocity: velocity
                            shoulder/effort: effort
                    elbow_actuator:
                        command_mode_map:
                            elbow/position: position
                            elbow/velocity: velocity
                            elbow/effort: effort
                    wrist_actuator:
                        command_mode_map:
                            wrist/position: position
                            wrist/velocity: velocity
                            wrist/effort: effort
            </param>
        </hardware>

        <joint name="shoulder">
            <command_interface name="position">
                <param name="min">-1.0</param>
                <param name="max">1.0</param>
            </command_interface>
            <command_interface name="velocity">
                <param name="max">6.0</param>
            </command_interface>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <transmission name="shoulder_trans">
            <plugin>transmission_interface/SimpleTransmission</plugin>
            <actuator name="shoulder_actuator" role="shoulder_actuator"/>
            <joint name="shoulder" role="shoulder">
                <mechanical_reduction>10.0</mechanical_reduction>
                <offset>0.0</offset>
            </joint>
        </transmission>

        <joint name="elbow">
            <command_interface name="position"/>
            <command_interface name="velocity"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <transmission name="elbow_trans">
            <plugin>transmission_interface/SimpleTransmission</plugin>
            <actuator name="elbow_actuator" role="elbow_actuator"/>
            <joint name="elbow" role="elbow">
                <mechanical_reduction>5.0</mechanical_reduction>
                <offset>0.0</offset>
            </joint>
        </transmission>

        <joint name="wrist">
            <command_interface name="position"/>
            <command_interface name="velocity"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
        </joint>

        <transmission name="wrist_trans">
            <plugin>transmission_interface/SimpleTransmission</plugin>
            <actuator name="wrist_actuator" role="wrist_actuator"/>
            <joint name="wrist" role="wrist">
                <mechanical_reduction>2.0</mechanical_reduction>
                <offset>0.0</offset>
            </joint>
        </transmission>

    </ros2_control>

</robot>